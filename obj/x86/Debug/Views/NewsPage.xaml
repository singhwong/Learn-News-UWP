<Page x:ConnectionId='1'
    x:Class="The_Paper.Views.NewsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:The_Paper.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local2="using:The_Paper.Models"
    xmlns:local3="using:The_Paper.Controls"
    xmlns:local4="using:The_Paper.Converters"
    xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
    mc:Ignorable="d"
    x:Name="News_Page">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="buttonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local4:BoolToVisibilityConverter x:Key="BTVC" />
            <local4:BoolInvertConverter x:Key="BIC" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid x:ConnectionId='2' Name="Grid"
          Background="Tan">
        <Grid.RowDefinitions>
            <RowDefinition x:ConnectionId='3' x:Name="row_1"
                           Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:ConnectionId='4' x:Name="colume_1"/>
            <ColumnDefinition x:ConnectionId='5' x:Name="colume_2"
                              Width="0"/>
        </Grid.ColumnDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='6' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='7' x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                        <!--<StateTrigger IsActive="{Binding IsOpen}" 
                                      x:Name="Trigger" />-->
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--<Setter Target="topNews_stackPanel.(Grid.Row)" Value="1"/>
                        <Setter Target="topNews_stackPanel.(Grid.Column)" Value="0"/>
                        <Setter Target="topNewsImage.(Grid.ColumnSpan)" Value="2"/>-->
                        <!--<Setter Target="topNews_stackPanel.(Grid.ColumnSpan)" Value="2"/>-->
                        <Setter Target="topNewsHL.FontSize" Value="13"/>
                        <Setter Target="topNewsMC.FontSize" Value="13"/>
                        <Setter Target="topNewsTag.FontSize" Value="12"/>
                        <Setter Target="topNewsSplit.FontSize" Value="12"/>
                        <Setter Target="topNewsTime.FontSize" Value="12"/>
                        <Setter Target="colume_one.Width" Value="200"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='8' x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--<Setter Target="colume_1.Width" Value="*"/>-->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <StackPanel x:ConnectionId='9' x:Name="newsPage_ads"
                    Margin="10,0,0,0"
                    Orientation="Horizontal">
            <UI:AdControl x:ConnectionId='31' x:Name="ad_contro"
                      ApplicationId="9n6jvkjh4ffl"
                      AdUnitId="1100039415"
                      Height="50"
                      Width="320"/>
            <UI:AdControl x:ConnectionId='32' x:Name="ad_control2"
                      ApplicationId="9n6jvkjh4ffl"
                      AdUnitId="1100039416"
                      Height="50"
                      Width="320"/>
            <UI:AdControl x:ConnectionId='33' x:Name="ad_control3"
                      ApplicationId="9n6jvkjh4ffl"
                      AdUnitId="1100039270"
                      Height="50"
                      Width="320"/>
            <UI:AdControl x:ConnectionId='34' x:Name="ad_control4"
                      ApplicationId="9n6jvkjh4ffl"
                      AdUnitId="1100039414"
                      Height="50"
                      Width="320"/>
        </StackPanel>
        <Button x:ConnectionId='10' Name="back_button"
                Content="返回"
                Grid.Column="1"
                HorizontalAlignment="Left"
                FontWeight="Thin"
                FontSize="15"
                Height="45"
                Visibility="Collapsed"
                Style="{StaticResource CustomButtonStyle}"
                                         />
        <local3:TabView x:ConnectionId='11' x:Name="TabView"
                        Grid.Row="1"
                                                     
                        TabNameList="{Binding TabNameList}">
            <local3:TabView.View>
                <ScrollViewer x:ConnectionId='13' Name="scrollViewer" 
                                                                    >
                    <RelativePanel>
                        <GridViewItem x:ConnectionId='14' Name="topNews"
                                      Style="{StaticResource NewsListItemStyle}"
                                      Visibility="{Binding Path=HasTopNews,Converter={StaticResource BTVC}}"
                                                             >
                            <Grid x:ConnectionId='22' Name="topNews_grid"
                                  Background="Tan">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:ConnectionId='23' x:Name="colume_one"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <!--<RowDefinition/>
                                    <RowDefinition/>-->
                                </Grid.RowDefinitions>
                                <Image x:ConnectionId='24' Name="topNewsImage" 
                                       Source="{Binding TopNews.image}"
                                       Margin="10,0,0,0"/>
                                <StackPanel x:ConnectionId='25' Name="topNews_stackPanel"
                                            Orientation="Vertical"
                                            Grid.Column="1">
                                    <TextBlock x:ConnectionId='26' Name="topNewsHL"
                                           TextTrimming="WordEllipsis"
                                           Margin="10,10,10,10"
                                           FontWeight="Bold"
                                               FontSize="22"
                                           TextWrapping="WrapWholeWords"
                                           Text="{Binding TopNews.headLine}" />
                                    <TextBlock x:ConnectionId='27' Name="topNewsMC" 
                                           Margin="10,10,10,10"
                                           TextWrapping="WrapWholeWords"
                                           TextTrimming="WordEllipsis"
                                               FontSize="16"
                                           Text="{Binding TopNews.mainContent}"/>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,3">
                                        <TextBlock x:ConnectionId='28' Name="topNewsTag" 
                                           Margin="10"
                                               FontSize="13"
                                           Text="{Binding TopNews.tag}" />
                                        <TextBlock x:ConnectionId='29' Name="topNewsSplit" 
                                           Margin="5,9,5,11"
                                               FontSize="13"
                                           Text="|" />
                                        <TextBlock x:ConnectionId='30' Name="topNewsTime" 
                                           Margin="10"
                                               FontSize="13"
                                           Text="{Binding TopNews.time}" />
                                    </StackPanel>
                                </StackPanel>
                                
                                <!--<FontIcon FontFamily="Segoe MDL2 Assets"
                                          Margin="0,5,0,10"
                                          Name="topNewsIcon"
                                          Glyph="&#xE206;" />
                                <TextBlock Name="topNewsCT"
                                        Margin="5,10,5,10"
                                        Text="{Binding TopNews.commentCount}" />-->
                            </Grid>
                        </GridViewItem>
                        <GridView x:ConnectionId='15' Name="NewsCards"
                                  ItemsSource="{Binding NewsList}"
                                  IsItemClickEnabled="True"
                                                                 
                                  RelativePanel.Below="topNews">
                            <GridView.ItemTemplate>
                                <DataTemplate                         >
                                    <!--<UserControl>-->
                                    <Grid x:ConnectionId='16' Name="NewsCard"     
                                          Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Image x:ConnectionId='17'                         
                                               Name="image"
                                               Width="200"/>
                                        <TextBlock x:ConnectionId='18'                          
                                                   Name="headLine"
                                                   FontWeight="Bold" 
                                                   TextWrapping="WrapWholeWords" 
                                                   Width="200"
                                                   FontSize="14"
                                                   Margin="5,0"
                                                   Grid.Row="1"/>
                                        <TextBlock x:ConnectionId='19'                             
                                                   Width="200"
                                                   Height="70"
                                                   Grid.Row="2"
                                                   FontSize="13"
                                                   Name="mainContent" 
                                                   Margin="5,0"
                                                   TextWrapping="WrapWholeWords" 
                                                   TextTrimming="WordEllipsis"/>
                                        <!--<FontIcon FontFamily="Segoe MDL2 Assets" Name="icon"
                                                        Glyph="&#xE206;"
                                                        Visibility="Visible"/>
                                            <TextBlock Text="{x:Bind commentCount}"
                                                       Name="commentCount"
                                                        Margin="5,10,5,10"
                                                       Visibility="Visible"/>-->
                                        <StackPanel Orientation="Horizontal"
                                                    Grid.Row="3"
                                                    Margin="5,0"
                                                    VerticalAlignment="Bottom">
                                            <TextBlock x:ConnectionId='20'                     
                                                       Name="tag" 
                                                       FontSize="12"/>
                                            <TextBlock Name="split" 
                                                       Text="|" 
                                                       Margin="5,0,5,0"
                                                       FontSize="10"/>
                                            <TextBlock x:ConnectionId='21'                     
                                                       Name="time"
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                    <!--</UserControl>-->
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                        <TextBlock FontSize="14" 
                                   RelativePanel.AlignHorizontalCenterWithPanel="True"
                                   RelativePanel.Below="NewsCards"
                                   Text="{Binding LoadStatus}" 
                                   Margin="0,0,0,10"
                                   Foreground="Gray"/>
                    </RelativePanel>
                </ScrollViewer>
            </local3:TabView.View>
        </local3:TabView>
        <!--<UI:AdControl x:Name="ad_control"
                      Grid.Row="1"
                      ApplicationId="9n6jvkjh4ffl"
                      AdUnitId="1100039418"
                      Height="600"
                      Width="160"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Right"/>-->
        <Frame x:ConnectionId='12' Name="NewsDetail"
               Grid.Row="1"
               Grid.Column="1"
               Visibility="Collapsed"/>
        <ProgressRing Width="100"
                      Height="100" 
                      Grid.RowSpan="2"                     
                      IsActive="{Binding Path=Loaded,Converter={StaticResource BIC}}" />
    </Grid>
</Page>

