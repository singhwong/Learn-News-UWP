<Page x:ConnectionId='1'
    x:Class="The_Paper.Views.VideoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:The_Paper.Views"
    xmlns:local3="using:The_Paper.Controls"
    xmlns:local4="using:The_Paper.Converters"
    xmlns:local5="using:The_Paper.UserControls"
    xmlns:controls="using:Windows.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
    xmlns:local2="using:The_Paper.Models"
    mc:Ignorable="d"
                        >

    <Page.Resources>
        <ResourceDictionary>
            <local4:BoolInvertConverter x:Key="BIC" />
            <local4:BoolToVisibilityConverter x:Key="BTVC" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="buttonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:ConnectionId='2' Name="RootGrid"
          Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition x:ConnectionId='3' x:Name="row_1"
                           Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="VideoDetail_grid.(Grid.Column)" Value="0"/>
                        <Setter Target="topVideoHeadLine.FontSize" Value="13"/>
                        <Setter Target="topVideoHeadLine.Margin" Value="5,0"/>
                        <Setter Target="topVideoLength.FontSize" Value="12"/>
                        <Setter Target="topVideo_stackPanel.(RelativePanel.AlignTopWithPanel)" Value="true"/>
                        <Setter Target="topVideoTag.FontSize" Value="12"/>
                        <Setter Target="topVideoTime.FontSize" Value="12"/>
                        <Setter Target="topVideo_stackPanel.Margin" Value="5,0"/>
                        <Setter Target="playButton.FontSize" Value="20"/>
                        <Setter Target="mediaElement_controls.IsCompact" Value="false"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="500"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="VideoDetail_grid.(Grid.Column)" Value="1"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <StackPanel x:ConnectionId='4' x:Name="videoPage_ads"
                    Orientation="Horizontal">
            <Button x:ConnectionId='32' Name="back_button"
                FontSize="15"
                HorizontalAlignment="Left"
                FontWeight="Bold"
                Visibility="Collapsed"
                AutomationProperties.Name="Custom appearance"
                Padding="4,-3,4,-3" 
                BorderThickness="1"
                    CornerRadius="10"
                                         >
                <Button.Resources>
                    <ResourceDictionary x:Key="Default">
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="ButtonBackground">
                            <GradientStop Color="Black" Offset="0.0"/>
                            <GradientStop Color="DarkGray" Offset="1.0"/>
                        </LinearGradientBrush>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="ButtonBorderBrush">
                            <GradientStop Color="White" Offset="0.0"/>
                            <GradientStop Color="Gray" Offset="1.0"/>
                        </LinearGradientBrush>

                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="ButtonBackgroundPointerOver">
                            <GradientStop Color="WhiteSmoke" Offset="0.0"/>
                            <GradientStop Color="Gray" Offset="1.0"/>
                        </LinearGradientBrush>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="ButtonBorderBrushPointerOver">
                            <GradientStop Color="LightBlue" Offset="0.0"/>
                            <GradientStop Color="White" Offset="1.0"/>
                        </LinearGradientBrush>

                        <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="DimGray"/>
                    </ResourceDictionary>
                </Button.Resources>
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon x:ConnectionId='37' Glyph="&#xE8BB;" Margin="0,10,0,10" FontSize="15"                                 />
                        <TextBlock Text="关  闭" Margin="10, 7, 0, 0"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <UI:AdControl x:ConnectionId='33' x:Name="ad_contro5"
                      ApplicationId="9pcr0b34nft8"
                      AdUnitId="1100039458"
                      Height="50"
                      Width="320"/>
            <UI:AdControl x:ConnectionId='34' x:Name="ad_control6"
                      ApplicationId="9pcr0b34nft8"
                      AdUnitId="1100039459"
                      Height="50"
                      Width="320"/>
            <UI:AdControl x:ConnectionId='35' x:Name="ad_control7"
                      ApplicationId="9pcr0b34nft8"
                      AdUnitId="1100039460"
                      Height="50"
                      Width="320"/>
            <UI:AdControl x:ConnectionId='36' x:Name="ad_control8"
                      ApplicationId="99pcr0b34nft8"
                      AdUnitId="1100039461"
                      Height="50"
                      Width="320"/>
        </StackPanel>
        <local3:TabView x:ConnectionId='5' Name="TabView"
                        Grid.Row="1"
                        TabNameList="{Binding TabNameList}" 
                                                     >
            <local3:TabView.View>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition x:ConnectionId='8' x:Name="videoRow_1"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition x:ConnectionId='9' x:Name="colume_2"
                              Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid x:ConnectionId='10' Name="TopVideo"
                          Grid.ColumnSpan="2"    
                          RelativePanel.AlignHorizontalCenterWithPanel="True">
                        <Grid x:ConnectionId='23' Name="TopThumb"                                
                              Visibility="{Binding Path=HasTopVideo,Converter={StaticResource BTVC}}">
                            <Image Source="{Binding TopVideo.imageSrc}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Stretch="UniformToFill"/>
                            <Canvas>
                                <Canvas.Background>
                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                        <GradientStop Offset="0.0" Color="#80000000" />
                                        <GradientStop Offset="0.25" Color="#40000000" />
                                        <GradientStop Offset="0.5" Color="#20000000" />
                                        <GradientStop Offset="0.75" Color="#40000000" />
                                        <GradientStop Offset="1.0" Color="#80000000" />
                                    </LinearGradientBrush>
                                </Canvas.Background>
                            </Canvas>
                            <RelativePanel VerticalAlignment="Center">
                                <FontIcon x:ConnectionId='26' Name="playButton" 
                                          FontFamily="Segoe MDL2 Assets" 
                                                                    
                                          Margin="5,5,5,5"
                                          RelativePanel.AlignHorizontalCenterWithPanel="True"
                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                          Foreground="White"
                                          FontSize="40" 
                                          Glyph="&#xE102;" />
                                <TextBlock x:ConnectionId='27' Name="topVideoHeadLine"
                                           Text="{Binding TopVideo.headLine}" 
                                           Margin="5,5,5,5"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           FontSize="20"
                                           TextWrapping="Wrap"
                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                           RelativePanel.Below="playButton"/>
                                <TextBlock x:ConnectionId='28' Name="topVideoLength" Text="{Binding TopVideo.length}"
                                           FontWeight="Medium"
                                           Margin="5,5,5,5"
                                           Foreground="White"
                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                           RelativePanel.Below="topVideoHeadLine"/>
                                <StackPanel x:ConnectionId='29' Name="topVideo_stackPanel"
                                            Orientation="Horizontal" 
                                            Margin="5,5,5,5"
                                            RelativePanel.AlignHorizontalCenterWithPanel="True"
                                            RelativePanel.Below="topVideoLength">
                                    <TextBlock x:ConnectionId='30' Name="topVideoTag" 
                                               Text="{Binding TopVideo.tag}"
                                               FontWeight="Medium"
                                               Margin="5,0,5,0"
                                               Foreground="White"/>
                                    <TextBlock x:ConnectionId='31' Name="topVideoTime"
                                               Text="{Binding TopVideo.time}"
                                               FontWeight="Medium"
                                               Margin="5,0,5,0"
                                               Foreground="White"/>
                                </StackPanel>
                            </RelativePanel>
                        </Grid>
                        <MediaElement x:ConnectionId='24' Source="{Binding VideoDetail.playURL}" 
                                      Visibility="{Binding IsOpen, Converter={StaticResource BTVC}}"
                                                                                
                                                                                  
                                      Name="mediaElement"         
                                      Volume="0.5"
                                      AreTransportControlsEnabled="True">
                            <MediaElement.TransportControls>
                                <MediaTransportControls x:ConnectionId='25' x:Name="mediaElement_controls"
                                                        IsCompact="True"/>
                            </MediaElement.TransportControls>
                        </MediaElement>
                    </Grid>
                    <ScrollViewer x:ConnectionId='11'                                       
                                  Name="ScrollViewer"
                                  Grid.Row="1"
                                  RelativePanel.Below="TopVideo">
                        <RelativePanel>
                            <GridView x:ConnectionId='15' Name="VideoCards"    
                                      ItemsSource="{Binding VideoList}"
                                      IsItemClickEnabled="True"
                                                                      >
                                <GridView.ItemTemplate>
                                    <DataTemplate                          >
                                        <Grid x:ConnectionId='17' Margin="5"
                                              Height="245">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="55"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Image x:ConnectionId='18' Name="image" 
                                                                         
                                               Width="200"/>
                                            <TextBlock x:ConnectionId='19' Name="headLine" 
                                                                               
                                                       Margin="5,0"
                                                       Grid.Row="1"
                                                       FontSize="13"
                                                       Width="200"
                                                       FontWeight="Bold"
                                                       TextWrapping="WrapWholeWords"/>
                                            <TextBlock x:ConnectionId='20' Name="mainContent" 
                                                                                   
                                                       FontSize="13"
                                                       Width="200"
                                                       Grid.Row="2"
                                                       Margin="5,0"
                                                       TextWrapping="WrapWholeWords"
                                                       TextTrimming="WordEllipsis"/>
                                            <StackPanel Name="tag_stackPanel"
                                                        Orientation="Horizontal"
                                                        Margin="5,0"
                                                        Grid.Row="3"
                                                        VerticalAlignment="Bottom">
                                                <TextBlock x:ConnectionId='21' Name="tag" 
                                                                               
                                                           FontSize="12"/>
                                                <TextBlock FontSize="10" 
                                                           Text="|" Name="split"
                                                           Margin="5,0,5,0" />
                                                <TextBlock x:ConnectionId='22' Name="time" 
                                                                               
                                                           FontSize="12"/>
                                            </StackPanel>

                                            <!--<FontIcon FontSize="10" FontFamily="Segoe MDL2 Assets"
                                                      Margin="5,7,0,6"
                                                      RelativePanel.AlignBottomWithPanel="True"
                                                      RelativePanel.LeftOf="commentCount"
                                                      Glyph="&#xE206;"
                                                      Visibility="Visible"/>
                                            <TextBlock Name="commentCount" Text="{x:Bind commentCount}" 
                                                       FontSize="10"
                                                       Margin="5,5,5,5"
                                                       RelativePanel.AlignRightWithPanel="True"
                                                       RelativePanel.AlignBottomWithPanel="True"/>-->
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                            <TextBlock x:ConnectionId='16' Name="videoStatus_textblock"
                                           RelativePanel.Below="VideoCards"
                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                           FontSize="14" 
                                           Text="{Binding LoadMoreStatus}" 
                                           Margin="0,0,0,10"
                                           Foreground="Gray"/>
                        </RelativePanel>
                    </ScrollViewer>
                    <!--<Grid RelativePanel.Below="TopVideo" Visibility="Collapsed"
                          Width="{Binding Path=ActualWidth,ElementName=mediaElement}"                        
                          Name="VideoInfo">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Border BorderThickness="0,0,1,0" BorderBrush="Black" Margin="5,5,5,5">
                            <TextBlock Text="{Binding VideoDetail.headLine}" 
                                           TextWrapping="WrapWholeWords"
                                           TextTrimming="WordEllipsis"
                                           FontSize="18" FontWeight="Bold" />
                        </Border>
                        <RelativePanel Grid.Column="1" Background="Transparent" Margin="5,5,5,5" >
                            <TextBlock Text="{Binding VideoDetail.mainContent}" Name="VideoMainContent"
                                           TextWrapping="WrapWholeWords"
                                           TextTrimming="WordEllipsis"
                                           FontWeight="Medium"
                                           MaxLines="2"
                                           Margin="5,0,0,0"
                                           FontSize="14"/>
