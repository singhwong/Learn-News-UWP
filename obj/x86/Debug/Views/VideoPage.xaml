<Page
    x:Class="The_Paper.Views.VideoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:The_Paper.Views"
    xmlns:local3="using:The_Paper.Controls"
    xmlns:local4="using:The_Paper.Converters"
    xmlns:local5="using:The_Paper.UserControls"
    xmlns:controls="using:Windows.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local2="using:The_Paper.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <local4:BoolInvertConverter x:Key="BIC" />
            <local4:BoolToVisibilityConverter x:Key="BTVC" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="buttonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:ConnectionId='1' Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition x:ConnectionId='2' x:Name="row_1"
                           Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition x:ConnectionId='3' x:Name="colume_2"
                              Width="0" />
        </Grid.ColumnDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='4' x:Name="VisualStateGroup1">
                <VisualState x:ConnectionId='5' x:Name="Wide">
                    <VisualState.StateTriggers>
                        <StateTrigger IsActive="{Binding IsOpen}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TopThumb.(Grid.Height)" Value="400" />
                        <Setter Target="TabView.(Grid.ColumnSpan)" Value="1" />
                        <Setter Target="VideoDetail.(Grid.Column)" Value="1" />
                        <Setter Target="ProgressRing.(Grid.ColumnSpan)" Value="1" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='6' x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <StateTrigger IsActive="{Binding Path=IsOpen,Converter={StaticResource BIC}}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TopThumb.(Grid.Height)" Value="300" />
                        <Setter Target="TabView.(Grid.ColumnSpan)" Value="2" />
                        <Setter Target="ProgressRing.(Grid.ColumnSpan)" Value="2" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Button x:ConnectionId='7' Name="back_button"
        Content="关闭"
               Grid.Column="1"
                HorizontalAlignment="Left"
                FontWeight="Thin"
                Visibility="Collapsed"
                Style="{StaticResource CustomButtonStyle}"
                                         />
        <local3:TabView x:ConnectionId='8' Name="TabView"
                        Grid.Row="1"
                        TabNameList="{Binding TabNameList}"                              >
            <local3:TabView.View>
                <RelativePanel Background="Black">
                    <Grid x:ConnectionId='11' Name="TopVideo" >
                        <Grid x:ConnectionId='30' Margin="10,10,10,10"  Name="TopThumb" Visibility="{Binding Path=HasTopVideo,Converter={StaticResource BTVC}}">
                            <Image Source="{Binding TopVideo.imageSrc}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Grid.Row="0" Stretch="UniformToFill"/>
                            <Canvas>
                                <Canvas.Background>
                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                        <GradientStop Offset="0.0" Color="#80000000" />
                                        <GradientStop Offset="0.25" Color="#40000000" />
                                        <GradientStop Offset="0.5" Color="#20000000" />
                                        <GradientStop Offset="0.75" Color="#40000000" />
                                        <GradientStop Offset="1.0" Color="#80000000" />
                                    </LinearGradientBrush>
                                </Canvas.Background>
                            </Canvas>
                            <RelativePanel VerticalAlignment="Center">
                                <FontIcon x:ConnectionId='32' Name="playButton" FontFamily="Segoe MDL2 Assets" 
                                                        
                              Margin="5,5,5,5"
                              RelativePanel.AlignHorizontalCenterWithPanel="True"
                              RelativePanel.AlignVerticalCenterWithPanel="True"
                              Foreground="White"
                              FontSize="40" Glyph="&#xE102;" />
                                <TextBlock x:ConnectionId='33' Name="topVideoHeadLine" Text="{Binding TopVideo.headLine}" 
                               Margin="5,5,5,5"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="30"
                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                               RelativePanel.Below="playButton"/>
                                <TextBlock x:ConnectionId='34' Name="topVideoLength" Text="{Binding TopVideo.length}"
                               FontWeight="Medium"
                               Margin="5,5,5,5"
                               Foreground="White"
                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                               RelativePanel.Below="topVideoHeadLine"/>
                                <StackPanel Orientation="Horizontal" 
                                Margin="5,5,5,5"
                                RelativePanel.AlignHorizontalCenterWithPanel="True"
                                RelativePanel.Below="topVideoLength">
                                    <TextBlock x:ConnectionId='35' Name="topVideoTag" Text="{Binding TopVideo.tag}"
                                   FontWeight="Medium"
                                   Margin="5,0,5,0"
                                   Foreground="White"/>
                                    <TextBlock x:ConnectionId='36' Name="topVideoTime" Text="{Binding TopVideo.time}"
                                   FontWeight="Medium"
                                   Margin="5,0,5,0"
                                   Foreground="White"/>
                                </StackPanel>
                            </RelativePanel>
                        </Grid>
                        <MediaElement x:ConnectionId='31' Source="{Binding VideoDetail.playURL}" 
                                      Visibility="{Binding IsOpen, Converter={StaticResource BTVC}}"
                                                                                
                                                                                  
                                      Margin="10,10,10,10" 
                                      Height="400"
                                      Name="mediaElement" AreTransportControlsEnabled="True">
                                <MediaElement.TransportControls>
                                    <MediaTransportControls IsCompact="True" />
                                </MediaElement.TransportControls>
                         </MediaElement>
                    </Grid>
                    <ScrollViewer x:ConnectionId='12'                                       
                                  Name="ScrollViewer" RelativePanel.Below="TopVideo">
                        <RelativePanel>
                            <GridView x:ConnectionId='23'                                             
                                      Name="VideoCards"
                                      Background="Black"
                              ItemContainerStyle="{StaticResource NewsListItemStyle}"
                              ItemsSource="{Binding VideoList}">
                                <GridView.ItemTemplate>
                                    <DataTemplate                          >
                                        <Grid x:ConnectionId='24' Background="Black">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                        <Image x:ConnectionId='25' Name="image" 
                                                                         
                                               Margin="5,5,5,5"
                                               Height="120"
                                               Width="200"/>
                                            <TextBlock x:ConnectionId='26' Name="headLine"                         
                                                       Width="195"
                                                       Grid.Row="1"
                                                       FontWeight="Bold"
                                                       TextWrapping="WrapWholeWords"/>
                                            <TextBlock x:ConnectionId='27' Name="mainContent" 
                                                                                   
                                                       FontSize="13"
                                                       Width="195"
                                                       Height="70"
                                                       Grid.Row="2"
                                                       TextWrapping="WrapWholeWords"
                                                       TextTrimming="WordEllipsis"/>
                                            <StackPanel Orientation="Horizontal"
                                                        Grid.Row="3"
                                                        VerticalAlignment="Bottom">
                                                <TextBlock x:ConnectionId='28' Name="tag" 
                                                                               
                                                           FontSize="12"/>
                                                <TextBlock FontSize="12" 
                                                           Text="|" Name="split"
                                                           Margin="5,0,5,0" />
                                                <TextBlock x:ConnectionId='29' Name="time" 
                                                                               
                                                           FontSize="12"/>
                                            </StackPanel>
                                            
                                            <!--<FontIcon FontSize="10" FontFamily="Segoe MDL2 Assets"
                                                      Margin="5,7,0,6"
                                                      RelativePanel.AlignBottomWithPanel="True"
                                                      RelativePanel.LeftOf="commentCount"
                                                      Glyph="&#xE206;"
                                                      Visibility="Visible"/>
                                            <TextBlock Name="commentCount" Text="{x:Bind commentCount}" 
                                                       FontSize="10"
                                                       Margin="5,5,5,5"
                                                       RelativePanel.AlignRightWithPanel="True"
                                                       RelativePanel.AlignBottomWithPanel="True"/>-->
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                            <TextBlock
                                FontSize="14" 
                                RelativePanel.AlignHorizontalCenterWithPanel="True"
                                RelativePanel.Below="VideoCards"
                                Text="{Binding LoadMoreStatus}" 
                                Margin="0,0,0,10"
                                Foreground="Gray"/>
                        </RelativePanel>
                    </ScrollViewer>
                    <Grid x:ConnectionId='13' Background="Black" RelativePanel.Below="TopVideo" Visibility="Collapsed"
                          Width="{Binding Path=ActualWidth,ElementName=mediaElement}"                        
                          Name="VideoInfo">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Border BorderThickness="0,0,1,0" BorderBrush="Black" Margin="5,5,5,5">
                            <TextBlock Text="{Binding VideoDetail.headLine}" 
                                           TextWrapping="WrapWholeWords"
                                           TextTrimming="WordEllipsis"
                                           FontSize="18" FontWeight="Bold" />
                        </Border>
                        <RelativePanel Grid.Column="1" Background="Transparent" Margin="5,5,5,5" >
                            <TextBlock x:ConnectionId='14' Text="{Binding VideoDetail.mainContent}" Name="VideoMainContent"
                                           TextWrapping="WrapWholeWords"
                                           TextTrimming="WordEllipsis"
                                           FontWeight="Medium"
                                           MaxLines="2"
                                           Margin="5,0,0,0"
                                           FontSize="14"/>
                            <TextBlock x:ConnectionId='15' Text="{Binding VideoDetail.time}" Name="VideoTime"
                                           FontSize="12"
                                           RelativePanel.Below="VideoMainContent" Margin="5,5,5,5"
                                           RelativePanel.AlignLeftWithPanel="True" />
                            <FontIcon x:ConnectionId='16' FontFamily="Segoe MDL2 Assets" Glyph="&#xE19F;" Name="ThumbIcon" 
                                          FontSize="12"
                                          RelativePanel.LeftOf="VideoThumbCount"
                                          RelativePanel.Below="VideoMainContent" Margin="5,7,5,5"/>
                            <TextBlock x:ConnectionId='17' Name="VideoThumbCount" 
                                           FontSize="12"
                                           Text="{Binding VideoDetail.thumbCount}" 
                                           RelativePanel.LeftOf="CommentIcon" 
                                           RelativePanel.Below="VideoMainContent" Margin="0,5,5,5"/>
                            <FontIcon x:ConnectionId='18' FontSize="12" FontFamily="Segoe MDL2 Assets"
                                      Margin="5,7,5,5"
                                      Name="CommentIcon"
                                      RelativePanel.Below="VideoMainContent"
                                      RelativePanel.LeftOf="VideoCommentCount"
                                      Glyph="&#xE206;" />
                            <TextBlock x:ConnectionId='19' Name="VideoCommentCount" Text="{Binding VideoDetail.commentCount}" 
                                           FontSize="12"
                                           RelativePanel.Below="VideoMainContent" Margin="0,5,5,5"
                                           RelativePanel.AlignRightWithPanel="True" />
                            <TextBlock x:ConnectionId='20' Text="{Binding VideoDetail.source}" FontSize="12"
                                           Name="VideoSource" RelativePanel.Below="VideoMainContent" RelativePanel.RightOf="VideoTime" Margin="5,5,5,5" />
                            <TextBlock x:ConnectionId='21' Text="{Binding VideoDetail.about}" FontSize="12"
                                           Name="VideoAbout" RelativePanel.Below="VideoSource" RelativePanel.AlignLeftWithPanel="True" Margin="5,5,5,0" />
                            <TextBlock x:ConnectionId='22' Text="{Binding VideoDetail.editor}" FontSize="12"
                                           Name="VideoEditor" RelativePanel.Below="VideoSource" RelativePanel.RightOf="VideoAbout" Margin="5,5,5,0" />
                        </RelativePanel>
                    </Grid>
                    <RelativePanel.Resources>
                        <Storyboard x:ConnectionId='37' x:Name="EnterAnim">
                            <FadeInThemeAnimation Storyboard.TargetName="VideoInfo"/>
                        </Storyboard>
                        <Storyboard x:ConnectionId='38' x:Name="ExitAnim">
                            <FadeOutThemeAnimation Storyboard.TargetName="VideoInfo"/>
                        </Storyboard>
                    </RelativePanel.Resources>
                </RelativePanel>
            </local3:TabView.View>
        </local3:TabView>
        <ProgressRing x:ConnectionId='9' Name="ProgressRing"
                      Width="75" Height="75" IsActive="{Binding Path=Loaded,Converter={StaticResource BIC}}" />
        <Frame x:ConnectionId='10' Name="VideoDetail" Visibility="{Binding IsOpen}" 
               Grid.Row="1"/>
    </Grid>
</Page>

