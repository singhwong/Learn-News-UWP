<Page x:ConnectionId='1'
    x:Class="The_Paper.Views.VideoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:The_Paper.Views"
    xmlns:local3="using:The_Paper.Controls"
    xmlns:local4="using:The_Paper.Converters"
    xmlns:local5="using:The_Paper.UserControls"
    xmlns:controls="using:Windows.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local2="using:The_Paper.Models"
    mc:Ignorable="d"
                        >

    <Page.Resources>
        <ResourceDictionary>
            <local4:BoolInvertConverter x:Key="BIC" />
            <local4:BoolToVisibilityConverter x:Key="BTVC" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="buttonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:ConnectionId='2' Name="RootGrid"
          Background="Tan">
        <Grid.RowDefinitions>
            <RowDefinition x:ConnectionId='3' x:Name="row_1"
                           Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="VideoDetail_grid.(Grid.Column)" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="VideoDetail_grid.(Grid.Column)" Value="1"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Button x:ConnectionId='4' Name="back_button"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE72B;"
                Grid.Column="1"
                FontSize="20"
                Height="45"
                HorizontalAlignment="Left"
                FontWeight="Thin"
                Visibility="Collapsed"
                Style="{StaticResource CustomButtonStyle}"
                                         />
        <local3:TabView x:ConnectionId='5' Name="TabView"
                        Grid.Row="1"
                        TabNameList="{Binding TabNameList}" 
                                                     >
            <local3:TabView.View>
                <Grid>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition x:ConnectionId='7' x:Name="videoRow_1"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition x:ConnectionId='8' x:Name="colume_2"
                              Width="Auto" />
                    </Grid.ColumnDefinitions>
                   
                    <Grid x:ConnectionId='9' Name="TopVideo"
                          Grid.ColumnSpan="2"    
                          BorderBrush="White"
                          BorderThickness="1"
                          CornerRadius="5"
                          RelativePanel.AlignHorizontalCenterWithPanel="True">
                        <Grid x:ConnectionId='22' Name="TopThumb" 
                              Height="300"                               
                              Visibility="{Binding Path=HasTopVideo,Converter={StaticResource BTVC}}">
                            <Image Source="{Binding TopVideo.imageSrc}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Stretch="UniformToFill"/>
                            <Canvas>
                                <Canvas.Background>
                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                        <GradientStop Offset="0.0" Color="#80000000" />
                                        <GradientStop Offset="0.25" Color="#40000000" />
                                        <GradientStop Offset="0.5" Color="#20000000" />
                                        <GradientStop Offset="0.75" Color="#40000000" />
                                        <GradientStop Offset="1.0" Color="#80000000" />
                                    </LinearGradientBrush>
                                </Canvas.Background>
                            </Canvas>
                            <RelativePanel VerticalAlignment="Center">
                                <FontIcon x:ConnectionId='24' Name="playButton" 
                                          FontFamily="Segoe MDL2 Assets" 
                                                                    
                                          Margin="5,5,5,5"
                                          RelativePanel.AlignHorizontalCenterWithPanel="True"
                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                          Foreground="White"
                                          FontSize="40" 
                                          Glyph="&#xE102;" />
                                <TextBlock x:ConnectionId='25' Name="topVideoHeadLine"
                                           Text="{Binding TopVideo.headLine}" 
                                           Margin="5,5,5,5"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           FontSize="20"
                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                           RelativePanel.Below="playButton"/>
                                <TextBlock x:ConnectionId='26' Name="topVideoLength" Text="{Binding TopVideo.length}"
                                           FontWeight="Medium"
                                           Margin="5,5,5,5"
                                           Foreground="White"
                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                           RelativePanel.Below="topVideoHeadLine"/>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="5,5,5,5"
                                            RelativePanel.AlignHorizontalCenterWithPanel="True"
                                            RelativePanel.Below="topVideoLength">
                                    <TextBlock x:ConnectionId='27' Name="topVideoTag" 
                                               Text="{Binding TopVideo.tag}"
                                               FontWeight="Medium"
                                               Margin="5,0,5,0"
                                               Foreground="White"/>
                                    <TextBlock x:ConnectionId='28' Name="topVideoTime"
                                               Text="{Binding TopVideo.time}"
                                               FontWeight="Medium"
                                               Margin="5,0,5,0"
                                               Foreground="White"/>
                                </StackPanel>
                            </RelativePanel>
                        </Grid>
                        <MediaElement x:ConnectionId='23' Source="{Binding VideoDetail.playURL}" 
                                      Visibility="{Binding IsOpen, Converter={StaticResource BTVC}}"
                                                                                
                                                                                  
                                      Name="mediaElement" 
                                      AreTransportControlsEnabled="True">
                                <MediaElement.TransportControls>
                                    <MediaTransportControls IsCompact="True" />
                                </MediaElement.TransportControls>
                         </MediaElement>
                    </Grid>
                    <ScrollViewer x:ConnectionId='10'                                       
                                  Name="ScrollViewer"
                                  Grid.Row="1"
                                  RelativePanel.Below="TopVideo">
                        <RelativePanel>
                            <GridView x:ConnectionId='14'                                             
                                      Name="VideoCards"
                                      ItemsSource="{Binding VideoList}"
                                      IsItemClickEnabled="True"
                                                                      >
                                <GridView.ItemTemplate>
                                    <DataTemplate                          >
                                        <Grid x:ConnectionId='16' Height="315"
                                              Width="280"
                                              BorderBrush="White"
                                              BorderThickness="1"
                                              CornerRadius="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Image x:ConnectionId='17' Name="image" 
                                                                         
                                                Height="170"
                                               Width="280"/>
                                            <TextBlock x:ConnectionId='18' Name="headLine" 
                                                                               
                                                       Margin="5,0"
                                                       Grid.Row="1"
                                                       FontSize="14"
                                                       Width="270"
                                                       FontWeight="Bold"
                                                       TextWrapping="WrapWholeWords"/>
                                            <TextBlock x:ConnectionId='19' Name="mainContent" 
                                                                                   
                                                       FontSize="13"
                                                       Width="270"
                                                       Height="70"
                                                       Grid.Row="2"
                                                       Margin="5,0"
                                                       TextWrapping="WrapWholeWords"
                                                       TextTrimming="WordEllipsis"/>
                                            <StackPanel Name="tag_stackPanel"
                                                        Orientation="Horizontal"
                                                        Margin="5,0"
                                                        Grid.Row="3"
                                                        VerticalAlignment="Bottom">
                                                <TextBlock x:ConnectionId='20' Name="tag" 
                                                                               
                                                           FontSize="12"/>
                                                <TextBlock FontSize="10" 
                                                           Text="|" Name="split"
                                                           Margin="5,0,5,0" />
                                                <TextBlock x:ConnectionId='21' Name="time" 
                                                                               
                                                           FontSize="12"/>
                                            </StackPanel>

                                            <!--<FontIcon FontSize="10" FontFamily="Segoe MDL2 Assets"
                                                      Margin="5,7,0,6"
                                                      RelativePanel.AlignBottomWithPanel="True"
                                                      RelativePanel.LeftOf="commentCount"
                                                      Glyph="&#xE206;"
                                                      Visibility="Visible"/>
                                            <TextBlock Name="commentCount" Text="{x:Bind commentCount}" 
                                                       FontSize="10"
                                                       Margin="5,5,5,5"
                                                       RelativePanel.AlignRightWithPanel="True"
                                                       RelativePanel.AlignBottomWithPanel="True"/>-->
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                                <TextBlock x:ConnectionId='15' Name="videoStatus_textblock"
                                           RelativePanel.Below="VideoCards"
                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                           FontSize="14" 
                                           Text="{Binding LoadMoreStatus}" 
                                           Margin="0,0,0,10"
                                           Foreground="Gray"/>
                        </RelativePanel>
                    </ScrollViewer>
                    <!--<Grid RelativePanel.Below="TopVideo" Visibility="Collapsed"
                          Width="{Binding Path=ActualWidth,ElementName=mediaElement}"                        
                          Name="VideoInfo">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Border BorderThickness="0,0,1,0" BorderBrush="Black" Margin="5,5,5,5">
                            <TextBlock Text="{Binding VideoDetail.headLine}" 
                                           TextWrapping="WrapWholeWords"
                                           TextTrimming="WordEllipsis"
                                           FontSize="18" FontWeight="Bold" />
                        </Border>
                        <RelativePanel Grid.Column="1" Background="Transparent" Margin="5,5,5,5" >
                            <TextBlock Text="{Binding VideoDetail.mainContent}" Name="VideoMainContent"
                                           TextWrapping="WrapWholeWords"
                                           TextTrimming="WordEllipsis"
                                           FontWeight="Medium"
                                           MaxLines="2"
                                           Margin="5,0,0,0"
                                           FontSize="14"/>
                            <TextBlock Text="{Binding VideoDetail.time}" Name="VideoTime"
                                           FontSize="12"
                                           RelativePanel.Below="VideoMainContent" Margin="5,5,5,5"
                                           RelativePanel.AlignLeftWithPanel="True" />
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE19F;" Name="ThumbIcon" 
                                          FontSize="12"
                                          RelativePanel.LeftOf="VideoThumbCount"
                                          RelativePanel.Below="VideoMainContent" Margin="5,7,5,5"/>
                            <TextBlock Name="VideoThumbCount" 
                                           FontSize="12"
                                           Text="{Binding VideoDetail.thumbCount}" 
                                           RelativePanel.LeftOf="CommentIcon" 
                                           RelativePanel.Below="VideoMainContent" Margin="0,5,5,5"/>
                            <FontIcon FontSize="12" FontFamily="Segoe MDL2 Assets"
                                      Margin="5,7,5,5"
                                      Name="CommentIcon"
                                      RelativePanel.Below="VideoMainContent"
                                      RelativePanel.LeftOf="VideoCommentCount"
                                      Glyph="&#xE206;" />
                            <TextBlock Name="VideoCommentCount" Text="{Binding VideoDetail.commentCount}" 
                                           FontSize="12"
                                           RelativePanel.Below="VideoMainContent" Margin="0,5,5,5"
                                           RelativePanel.AlignRightWithPanel="True" />
                            <TextBlock Text="{Binding VideoDetail.source}" FontSize="12"
                                           Name="VideoSource" RelativePanel.Below="VideoMainContent" RelativePanel.RightOf="VideoTime" Margin="5,5,5,5" />
                            <TextBlock Text="{Binding VideoDetail.about}" FontSize="12"
                                           Name="VideoAbout" RelativePanel.Below="VideoSource" RelativePanel.AlignLeftWithPanel="True" Margin="5,5,5,0" />
                            <TextBlock Text="{Binding VideoDetail.editor}" FontSize="12"
                                           Name="VideoEditor" RelativePanel.Below="VideoSource" RelativePanel.RightOf="VideoAbout" Margin="5,5,5,0" />
                        </RelativePanel>
                    </Grid>-->
                    <!--<Grid.Resources>
                        <Storyboard x:Name="EnterAnim">
                            <FadeInThemeAnimation Storyboard.TargetName="VideoInfo"/>
                        </Storyboard>
                        <Storyboard x:Name="ExitAnim">
                            <FadeOutThemeAnimation Storyboard.TargetName="VideoInfo"/>
                        </Storyboard>
                    </Grid.Resources>-->
                    <Grid x:ConnectionId='11' Name="VideoDetail_grid"
                                Width="300"
                                Grid.Row="1"
                                 Grid.Column="1"
                          Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button x:ConnectionId='12' Name="close_button"
                                Content="close"
                                Background="Tan"
                                Height="30"
                                FontWeight="Bold"
                                FontStyle="Italic"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                                          />
                        <Frame x:ConnectionId='13' Name="VideoDetail"
                               Grid.Row="1"/>
                    </Grid>
                </Grid>
            </local3:TabView.View>
        </local3:TabView>
        
        <ProgressRing x:ConnectionId='6' Name="main_ProgressRing"
                      Width="100" Height="100" Grid.RowSpan="2" IsActive="{Binding Path=Loaded,Converter={StaticResource BIC}}" />
        
    </Grid>
</Page>

