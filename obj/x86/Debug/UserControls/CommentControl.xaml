<UserControl
    x:Class="The_Paper.UserControls.CommentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:The_Paper.UserControls"
    xmlns:local2="using:The_Paper.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary Source="/Resources/ControlStyle.xaml" />
    </UserControl.Resources>
    <RelativePanel x:ConnectionId='1' Name="RelativePanel">
        <TextBox x:ConnectionId='2' Name="EditBox" PlaceholderText="说点什么呢~"
                 Margin="0,0,0,10" Height="100" Width="{Binding Path=ActualWidth,ElementName=HotCommentBox}" />
        <Button x:ConnectionId='3' Name="ReplyBtn" Margin="0,0,0,10" RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="EditBox">回复</Button>
        <TextBlock x:ConnectionId='4' Name="Hot" Text="按热度" FontSize="14"
                   Visibility="{Binding HasHotComments}"
                   FontWeight="Bold" RelativePanel.AlignLeftWithPanel="True" RelativePanel.Below="ReplyBtn"/>
        <ListBox x:ConnectionId='5' Name="HotCommentBox" ItemsSource="{Binding HotComments}" 
                 RelativePanel.Below="Hot" ItemContainerStyle="{StaticResource CommentListBoxStyle}" >
            <ListBox.ItemTemplate>
                <DataTemplate                            >
                    <RelativePanel x:ConnectionId='17' Name="HotCommentPanel" Margin="10,10,10,10" Background="Transparent">
                        <StackPanel Name="HotAvator">
                            <Ellipse Width="50" Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush x:ConnectionId='25'                                  />
                                </Ellipse.Fill>
                            </Ellipse>
                        </StackPanel>
                        <TextBlock x:ConnectionId='18'                          Name="HotUserName" FontSize="12" Foreground="Blue" RelativePanel.RightOf="HotAvator" Margin="5,0,0,0"/>
                        <TextBlock x:ConnectionId='19'                      Name="HotTime" FontSize="12" RelativePanel.RightOf="HotUserName" Margin="10,0,0,0" />
                        <ListView x:ConnectionId='20' Background="LightGray"  Margin="30,5,5,5"                                     
                            IsItemClickEnabled="False" Name="HotFloor" RelativePanel.RightOf="HotAvator" RelativePanel.Below="HotUserName">
                            <ListView.ItemTemplate>
                                <DataTemplate                                 >
                                    <StackPanel x:ConnectionId='22' Orientation="Vertical" >
                                        <TextBlock x:ConnectionId='23'                          FontSize="12" Foreground="Blue" Margin="5,5,5,5"/>
                                        <TextBlock x:ConnectionId='24'                         FontSize="14" MaxLines="2" TextWrapping="WrapWholeWords" Margin="5,5,5,5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='21'                         FontSize="13" RelativePanel.Below="HotFloor" RelativePanel.RightOf="HotAvator" Margin="20,5,5,5"
                                   TextWrapping="Wrap"/>
                    </RelativePanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock x:ConnectionId='6' Name="New" Text="按时间" FontSize="14" FontWeight="Bold" 
                   Visibility="{Binding HasNewComments}"
                   RelativePanel.Below="HotCommentBox"
                   RelativePanel.AlignLeftWithPanel="True" />
        <ListBox x:ConnectionId='7' Name="CommentBox" RelativePanel.Below="New" ItemContainerStyle="{StaticResource CommentListBoxStyle}"
                 ItemsSource="{Binding NewComments}">
            <ListBox.ItemTemplate>
                <DataTemplate                            >
                    <RelativePanel x:ConnectionId='8' Name="CommentPanel" Margin="10,10,10,10" Background="Transparent">
                        <StackPanel Name="Avator">
                            <Ellipse Width="50" Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush x:ConnectionId='16'                                  />
                                </Ellipse.Fill>
                            </Ellipse>
                        </StackPanel>
                        <TextBlock x:ConnectionId='9'                          Name="UserName" FontSize="12" Foreground="Blue" RelativePanel.RightOf="Avator" Margin="5,0,0,0"/>
                        <TextBlock x:ConnectionId='10'                      Name="Time" FontSize="12" RelativePanel.RightOf="UserName" Margin="10,0,0,0" />
                        <ListView x:ConnectionId='11' Background="LightGray"  Margin="30,5,5,5"                                     
                            IsItemClickEnabled="False" Name="Floor" RelativePanel.RightOf="Avator" RelativePanel.Below="UserName">
                            <ListView.ItemTemplate>
                                <DataTemplate                                 >
                                    <StackPanel x:ConnectionId='13' Orientation="Vertical" >
                                        <TextBlock x:ConnectionId='14'                          FontSize="12" Foreground="Blue" Margin="5,5,5,5"/>
                                        <TextBlock x:ConnectionId='15'                         FontSize="14" MaxLines="2" TextWrapping="WrapWholeWords" Margin="5,5,5,5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='12'                         FontSize="13"  RelativePanel.RightOf="Avator"
                                   RelativePanel.Below="Floor"
                                   Margin="20,5,5,5"
                                   TextWrapping="Wrap"/>
                    </RelativePanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </RelativePanel>
</UserControl>

