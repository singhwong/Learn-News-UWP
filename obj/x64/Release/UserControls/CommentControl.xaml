<UserControl
    x:Class="The_Paper.UserControls.CommentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:The_Paper.UserControls"
    xmlns:local2="using:The_Paper.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary Source="/Resources/ControlStyle.xaml" />
    </UserControl.Resources>
    <StackPanel x:ConnectionId='1' Orientation="Vertical" Name="RelativePanel"     
                Background="Tan">
        <!--<TextBox Name="EditBox" PlaceholderText="说点什么呢~"
                 Margin="0,0,0,10" Height="100" Width="{Binding Path=ActualWidth,ElementName=HotCommentBox}" />
        <Button Name="ReplyBtn" Margin="0,0,0,10" RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="EditBox">回复</Button>-->
        <TextBlock x:ConnectionId='2' Name="Hot" Text="按热度" FontSize="14"
                   Visibility="{Binding HasHotComments}"
                   FontWeight="Bold"/>
        <ListBox x:ConnectionId='3' Name="HotCommentBox" ItemsSource="{Binding HotComments}" 
                  ItemContainerStyle="{StaticResource CommentListBoxStyle}"
                 Background="Tan">
            <ListBox.ItemTemplate>
                <DataTemplate                            >
                    <RelativePanel x:ConnectionId='12' Name="HotCommentPanel" Background="Tan">
                        <StackPanel Name="HotAvator">
                            <Ellipse Width="50" Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush x:ConnectionId='17'                                  />
                                </Ellipse.Fill>
                            </Ellipse>
                        </StackPanel>
                        <TextBlock x:ConnectionId='13'                          Name="HotUserName" FontSize="12" Foreground="Blue" RelativePanel.RightOf="HotAvator" Margin="5,0,0,0"/>
                        <TextBlock x:ConnectionId='14'                      Name="HotTime" FontSize="12" RelativePanel.Below="HotUserName" 
                                   RelativePanel.RightOf="HotAvator"
                                   Margin="5,0,0,0" />
                        <ListView x:ConnectionId='15'                                     
                                  Visibility="Collapsed"
                            IsItemClickEnabled="False" Name="HotFloor" RelativePanel.RightOf="HotAvator" RelativePanel.Below="HotAvator">
                            <ListView.ItemTemplate>
                                <DataTemplate                                 >
                                    <StackPanel Orientation="Vertical" >
                                        <!--<TextBlock Text="{x:Bind userName}" FontSize="12" Foreground="Blue" Margin="5,5,5,5"/>-->
                                        <!--<TextBlock Text="{x:Bind content}" FontSize="14" MaxLines="2" TextWrapping="WrapWholeWords" Margin="5,5,5,5"/>-->
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='16'                         FontSize="13"
                                   Width="150"
                                   RelativePanel.Below="HotFloor" RelativePanel.RightOf="HotAvator"
                                   TextWrapping="Wrap"/>
                    </RelativePanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock x:ConnectionId='4' Name="New" Text="按时间" FontSize="14" FontWeight="Bold" 
                   Visibility="{Binding HasNewComments}"/>
        <ListBox x:ConnectionId='5' Name="CommentBox" ItemContainerStyle="{StaticResource CommentListBoxStyle}"
                 Background="Tan"
                 ItemsSource="{Binding NewComments}">
            <ListBox.ItemTemplate>
                <DataTemplate                            >
                    <RelativePanel x:ConnectionId='6' Name="CommentPanel" Background="Tan">
                        <StackPanel Name="Avator">
                            <Ellipse Width="50" Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush x:ConnectionId='11'                                  />
                                </Ellipse.Fill>
                            </Ellipse>
                        </StackPanel>
                        <TextBlock x:ConnectionId='7'                          Name="UserName" FontSize="12" Foreground="Blue" RelativePanel.RightOf="Avator" Margin="5,0,0,0"/>
                        <TextBlock x:ConnectionId='8'                      Name="Time" FontSize="12" RelativePanel.Below="UserName" 
                                   RelativePanel.RightOf="Avator"
                                   Margin="5,0,0,0" />
                        <ListView x:ConnectionId='9'  Margin="30,5,5,5"                                     
                                  Visibility="Collapsed"
                            IsItemClickEnabled="False" Name="Floor" RelativePanel.RightOf="Avator" RelativePanel.Below="UserName">
                            <ListView.ItemTemplate>
                                <DataTemplate                                 >
                                    <StackPanel Orientation="Vertical" >
                                        <!--<TextBlock Text="{x:Bind userName}" FontSize="12" Foreground="Blue" Margin="5,5,5,5"/>
                                        <TextBlock Text="{x:Bind content}" FontSize="12" MaxLines="2" TextWrapping="WrapWholeWords" Margin="5,5,5,5"/>-->
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='10'                         FontSize="13"
                                   Width="150"
                                   RelativePanel.RightOf="Avator"
                                   RelativePanel.Below="Avator"
                                   TextWrapping="Wrap"/>
                    </RelativePanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>

